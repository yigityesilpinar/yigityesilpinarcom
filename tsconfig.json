{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es5", "es6", "DOM", "ESNext.Array"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "src": ["src/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  }
}
