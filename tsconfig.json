{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "lib": ["es5", "es6", "DOM", "ESNext.Array"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "paths": {
      "src": ["src/*"]
    }
  }
}
